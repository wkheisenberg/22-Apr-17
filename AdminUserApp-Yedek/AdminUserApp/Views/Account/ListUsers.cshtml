@model IEnumerable<AdminUserApp.Models.User>

@{
    ViewBag.Title = "ListUsers";
}

<h2>Kullanıcılar</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                <strong>
                    @Html.DisplayFor(modelItem => item.Email)
                </strong>
            </td>
            <td>
                @Html.ActionLink("Tüm Bilgiler", "Details", new { id = item.UserId }) |
                @Html.ActionLink("Kullanıcıyı Silin", "Delete", new { sid = item.UserId }, new { onclick = "return confirm('Silmek istediğinizden emin misiniz ?');" })
            </td>
        </tr>
    }

</table>